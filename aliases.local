alias reload!='. ~/.zshrc'

c() { cd ~/Code/$1; }
_c() { _files -W ~/Code -/; }
compdef _c c

p() { cd ~/Projects/$1; }
_p() { _files -W ~/Projects -/; }
compdef _p p

s() { cd ~/Sites/$1; }
_s() { _files -W ~/Sites -/; }
compdef _s s

alias pubkey="more ~/.ssh/id_rsa.pub | pbcopy | echo '=> Public key copied to pasteboard.'"

