# vi:syntax=zsh
#
export GPG_TTY=$(tty)

alias e=$EDITOR

alias npm="NEWT_SKIP_VPNCHECK=1 newt exec npm"
alias vim="nvim"
alias qq="cd . && source ~/.zshrc"
alias ls="exa"
alias rm="trash"
alias aci="asciinema"

alias re-source="source ~/.localrc"
alias tmux="tmux -2"
alias ssh='TERM=xterm-256color ssh'
alias grep="egrep --color=auto"

# Copy-pasting `$ python something.py` works
alias \$=''
alias diff="colordiff -u"
alias mkdir="mkdir -p"

# Global aliases
alias -g G="| grep "
alias -g ONE="| awk '{ print \$1}'"

# Git Aliases
alias git=hub
alias gd="git diff"
# Grep with grouped output like Ack
alias gg="git g"
alias gs='git status -sb'
alias amend-new="git commit --amend"
alias gmf="git merge --no-ff"

alias ga="git add"
alias gai="git add --interactive"
alias gcp="git rev-parse HEAD | pbcopy"
alias gco="git checkout"
alias gcm="git commit -m"

# these aliases take advantage of the previous function
alias ggpull='git pull origin $(current_branch)'
alias ggpush='git push origin $(current_branch)'
alias ggpnp='git pull origin $(current_branch) && git push origin $(current_branch)'

unalias z

export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'
export FZF_CTRL_T_COMMAND=$FZF_DEFAULT_COMMAND
